<%= render partial: 'site/header' %>
<div id="wrap">
          <div id="creatives_count">
            <p>Creatives at your disposal / <span><%= User.where(type: :marketer).count %></span>
          </div>
          <div id="your_campaigns">
          <div id="devider_line2"></div>
          <h1>Available Campaigns:</h1>
          </div>
          <div id="personal_projects">
          <% if current_user.active_campaigns.empty? %>
          <p>&nbspNo campaigns started <button class="button_grey" style="margin:0 0 0 10px">Pick a campaign & get started!</button></p> 
          <% else %>
            <% current_user.active_campaigns.each do |campaign| %>

              <a href="/campaigns/<%= campaign.uuid %>"><p><%= campaign.title %></p></a>
              <div id="devider_line"></div>
            <% end %>
            <div id="devider_end"></div>
          <% end %>
          <div id="devider_end2"></div>

  </div>
  </div>
