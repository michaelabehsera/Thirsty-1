<div id="social" class="modal hide fade">
  <div class="modal-header"><a class="close" data-dismiss="modal">Ã—</a><h2></h2></div>
  <div class="modal-body">
    <%= form_tag "/profile/#{user.username}/link", remote: true do %>
     <%= text_field_tag :url, '', placeholder: 'url', autocomplete: 'off' %>
     <%= hidden_field_tag :name %>
  </div>
  <div class="modal-footer">
    <%= content_tag :button, 'Save', :'data-dismiss' => 'modal', class: 'btn btn-success' %>
    <% end %>
    <%= content_tag :button, 'Close', :'data-dismiss' => 'modal', class: 'btn' %>
  </div>
</div>

<%= render partial: 'site/header' %>
<div id="settings">
            <div id="inner_settings">
            <h1>Your Settings</h1>
            <%= form_for :user, url: "/profile/#{user.username}/update", html: { remote: true } do |f| %>
            <p>First Name</p>
            <%= f.text_field :first_name, value: user.first_name, autocomplete: 'off' %>
            <p>Last Name</p>
            <%= f.text_field :last_name, value: user.last_name, autocomplete: 'off' %>
            <p>Email Address</p>
            <%= f.text_field :email, value: user.email, autocomplete: 'off' %>
            <p>Change Password</p>
            <%= password_field_tag :password, '', autocomplete: 'off' %>
            <p>Confirm Password</p>
            <%= password_field_tag :password_confirmation, '', autocomplete: 'off' %>
            <p>Add an avatar</p>
            <%= f.text_field :avatar, value: user.avatar, placeholder: 'avatar url', autocomplete: 'off' %>
            <p>Add a profile background image</p>
            <%= f.text_field :background, value: user.background, placeholder: 'background image url', autocomplete: 'off' %>
            <%= f.submit :submit, class: 'btn' %>
            <% end %>

